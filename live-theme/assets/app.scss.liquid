// blog
.template-blog {
  #MainContent {
    padding-top: $border-width + 10px;
  }
}
.blog-author {
  display: flex;
  .author-image {
    margin-right: 20px;
    padding-right: 20px;
    border-right: $borderWeight $borderStyle $colorAlternate;

    img {
      border-radius: 100%;
      height: 80px;
    }
  }

  .author-meta {
    flex: 1 0 auto;
  }
  a {
    text-transform: lowercase;
  }
}
.template-article {
  main article {
    header {
        position: relative;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 1;
        margin-bottom: 100px;

        .bg {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
            transition: all 600ms ease;
            transform: translate3d(0,0,0);
            @include s(){
              height: auto;
              margin: $border-width 0;

            }
            img {
              max-width: none;
              width: 100%;
              position: absolute;
              left: 50%;
              top: 50%;
              transform: translate(-50%,-50%);

              @include s(){
                transform: none;
                left: 0;
                right: 0;
                position: static;
                max-width: 100%;
              };
            }
            &.active {
              height: 300px;
              @include s(){
                height: auto;
              }
            }
            &:after {
              content: '';
              width: 100%;
              height: 100%;
              position: absolute;
              left: 0;
              top: 0;
              background-color: rgba(0,0,0,0.2);
              z-index: 2;

              @include s(){
                content: none;
              }
            }
        }
        .article-meta {
          position: absolute;
          top: 40%;
          left: 0;
          right: 0;
          text-align: center;
          width: 100%;
          max-width: 800px;
          margin: 0 auto;
          color: #fff;
          z-index: 9;

          @include s(){
            position: relative;
            color: inherit;
          };
          hr {
            border-top: 1px solid #fff;
            max-width: 200px;
            margin-left: auto;
            margin-right: auto;

            @include s(){
              border-color: inherit;
            };
          }
          h1 {
            text-transform: uppercase;
          }
        }
    }

    .article-body {
      max-width: 600px;
      margin: 0 auto;
      margin-bottom: 50px;
    }
  }
  .footer-monogram {
    width: 30px;
    height: auto;
  }
  .social-sharing-container {
    text-align: right;
    position: fixed;
    top: 100px;
    left: calc(50% - 380px);

    @include s(){
      position: static;
      left: inherit;
      top: inherit;
    }
  }
  .social-sharing {
    a {
      margin-bottom: 10px;
      margin-right: 0;
      display: block;
      @include s(){
        margin-bottom: 0;
        margin-right: 10px;
        display: inline-block;
      }
    }
  }
}

