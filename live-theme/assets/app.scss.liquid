}


// animation
.product-slide {
  transition: transform 500ms ease;
  &.next-slide {
    transform: translateX(calc(-50vw + 50px));
  }
  &.prev-slide {
    transform: translateX(calc(50vw + 50px));
  }
}

.product-title {
    .title-mask {
      overflow: hidden;

      h1 {
        transition: all 300ms ease;
      }
    }
    &.hide-title {
      h1 {
        transform: translateY(120%);
      }
    }
}

.product-size {
  .option-mask {
    overflow: hidden;
    button {
      &:nth-child(1){
        transition-delay: 0.2s;
      }
      &:nth-child(2){
        transition-delay: 0.3s;
      }
      &:nth-child(3){
        transition-delay: 0.4s;
      }
    }
  }
  &.hide-options {
    button {
      transform: translateY(120%);
    }
  }
}

