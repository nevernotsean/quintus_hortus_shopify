    }
    .product-grid-title {
      position: fixed;
      top: 50%;
      left: 350px;
      opacity: 0;
      color: #fff;
      text-transform: capitalize;

      @include m(){
        font-size: 36px;
      }
      @include l(){
        font-size: 72px;
      }
      @include s(){
