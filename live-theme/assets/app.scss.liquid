// product sidebar
.product-side {
  display: inline-block;
  text-align: right;
  position: absolute;
  z-index: 9;
  right: 60px;
  top: 50%;
  transform: translateY(-50%);

  li {
    display: flex;
    margin: 10px 0;

    .label {
      opacity: 0;
      transform: translateX(10px);
      transition: all 200ms ease;

      line-height: 46px;
      padding: 0 10px;
