// Contact Page
#contactez-nous #MainContent {
  form {
    display: block !important;
  }
  .slide {
    position: relative;
  }
  .button {
    @extend button;
    position: absolute;
    bottom: $border-width * 2;
    right: $border-width * 2;
  }
  label {
    display: inline-block;
    padding: 0 5px 1em 0;
    font-weight: 700;
    pointer-events: none;
  }

  .slide-inner {
      max-width: 960px;
      margin: 0 auto;
      text-align: left;
      font-size: 2.5em;
  }

  textarea {
    padding: 0.25em;
    width: 100%;
    height: 200px;
    background-color: transparent;
    font-weight: 700;
    font-size: 0.85em;
    resize: none;
  }

  input {
    &[type="text"],
    &[type="email"] {
        display: block;
        margin: 0;
        padding: 0 0 0.15em;
        width: 100%;
        border: none;
        border-bottom: 2px solid rgba(0,0,0,0.2);
        background-color: transparent;
        text-overflow: ellipsis;
        font-weight: bold;
        font-size: 60px;
        border-radius: 0;
        height: auto;
        line-height: normal;
        &:focus {
            background-color: transparent;
        }
    }
  }
  input, textarea {
    &[required] {
      background-image: url({{ 'required.svg' | asset_url }});
      background-position: top right;
      background-size: 18px;
      background-repeat: no-repeat;
    }
    &.error {
      border-color: indianred;
    }
    & + label.error {
      font-size: 16px;
      color: indianred;
    }
  }

  input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
      color: rgba(0,0,0,0.1);
  }
  .section-review {
    .slide-inner {
      input[type="text"],
      input[type="email"],
      textarea,
      label {
        font-size: 1.25rem;
      }
    }
    .row {
      margin-bottom: 24px;
      .column {
          width: 100%;
      }
    }

    form {
        width: 100%;
        max-width: none;
        margin: 0 auto;
    }
  }
  @include s(){
    .button {
      width: auto;
    }
  };
}

.shopify-challenge__container form {
    margin: 0 auto;
    display: block;
}

.shopify-challenge__container {
    margin-top: 200px;
}

