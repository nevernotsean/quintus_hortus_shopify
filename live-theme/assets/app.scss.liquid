// Sidebar popup style

.popup.popup-sidebar {
  opacity: 1;
  transform: none;

  .popup-inner {
    text-align: right;
    transform: none;
  }
  .popup-content {
      padding-top: 35px;
      padding-bottom: 35px;
      top: 0;
      right: 0;
      height: 100%;
      left: initial;
      transform: translate(400px, 0);
      transition: all 300ms ease;
  }
  &.popup-sidebar-left {

    .popup-content {
      position: absolute;
      right: initial;
      left: 0;
      transform: translate(-400px, 0);
    }
  }

  &.visible {
    transform: none;
    .popup-content {
      transform: none;
    }
  }
}
