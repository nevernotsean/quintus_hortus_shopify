// product corner
.product-instructions {
  position: absolute;
  bottom: 60px;
  left: 60px;

  .button {
   width: 120px;
   height: 120px;
   border-radius: 120px;
   border-color: $colorAlternate;
   background-color: $colorAlternate;
      span {
        position: absolute;
        left: 10px;
        width: 100px;
        top: 50%;
        transform: translateY(-60%);
