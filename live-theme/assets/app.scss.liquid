  &:disabled, &.disabled {
    cursor: default;
    background-color: lighten($colorAlternate, 30%);
    border-color: lighten($colorAlternate, 30%);
    color: lighten($colorAlternate, 0%);
    &:hover {
      @extend .disabled
    }
