<!-- /snippets/popup-cart.liquid -->

{% comment %}
  The popup cart has been added to display the opportunities for displaying the
  cart contents on any page
{% endcomment %}

<div id="PopupCart" class="popup overlay popup-sidebar">
  <div class="popup-inner">
    <div class="popup-outside"></div>
    <div class="popup-content left" data-cart-view rv-cloak>
        <div class="h1">{{ 'cart.title' | t }}</div>
        <div class="cart-content">
          <div class="cart-body">
            <div class="cart-item-container" rv-each-item="cart.items">
              <p>
                <a rv-href="item.url">{ item.product_title } { item.variant_title }</a>
              </p>
              <div class="row cart-item">
                <div class="column l6 m6 s6">
                  <strong>{ item.line_price | money_with_currency }</strong>
                </div>
                <div class="column l6 m6 s6 right">
                  <div class="quanity_adjust">
                    <a class="adjust" id="minusOne" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | minus 1">&#8722;</a>
                    <span class="quantity">{ item.quantity }</span>
                    <a class="adjust" id="plusOne" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | plus 1">&#43;</a>
                    <a id="removeAll" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="0"><i class="fa fa-trash"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="cart-footer">
            <hr>
            <p><small>Les frais de livraison sont au tarif fixe de 4â‚¬.</small></p>
            <div class="row cart-item">
              <div class="column l6 m6 s6">
                <a href="/cart" aria-label="{{ 'cart.view_cart' | t }}">{{ 'cart.view_cart' | t }}</a>
              </div>
              <div class="column l6 m6 s6 right">
                <strong>{{ 'cart.total' | t }} <span data-cart-view>{ cart.total_price | money_with_currency }</span></strong>
              </div>
            </div>
            <p class="center"><a href="/cart" class="button wide" aria-label="{{ 'cart.checkout' | t }}">{{ 'cart.checkout' | t }}</a></p>
            <a href="#close" class="popup-close" aria-label="{{ 'common.close' | t }}">&times</a>
          </div>
        </div>
      </div>
  </div>
</div>
