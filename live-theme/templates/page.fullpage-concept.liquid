{% layout 'fullpage' %}
{% assign content = page.content | split: '<!-- section -->'%}
<div class="section">
{% for slide in content %}
  <div class="slide slide{{forloop.index}} center">
    <div class="slide-inner">
      {% if slide contains '<!-- left-right -->' %}

        {% assign splitContent = slide | split: '<!-- left-right -->' %}

         <div class="splitContent">
           <div class="leftSide">
             <div class="leftContent">{{ splitContent[0] }}</div>
           </div>
           <div class="rightSide">
             <div class="rightContent">
               {% if forloop.index == 1%}
               <h1 class="contentTitle">{{ page.title }}</h1>
               {% endif %}
               <div class="rightBody">
                 {{ splitContent[1] }}
               </div>
             </div>
           </div>
         </div>

      {% else %}

        <div class="fullContent">
          {{ slide }}
        </div>

      {% endif %}
    </div>
  </div>
{% endfor %}
</div>
